@model WebApplication1.Models.HeaderTagViewModel

@{
    ViewBag.Title = "Edit";
}


<div class="row">

    @using (Html.BeginForm("Action", "Home", null, FormMethod.Post, new { id = "editTag" }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.ItemTagID)
                    @Html.EditorFor(model => model.ItemTagID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ItemTagID, "", new { @class = "text-danger" })
                </div>
            </div>


            @*@Html.LabelFor(model => model.Antani)
                @Html.DropDownListFor(model => model.AntaniSelected, Model.Antani, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Antani, "", new { @class = "text-danger" })*@



        </div>

        <div class="row">


            @for (var i = 0; i < Model.itemTagConfigList.Count; i++)
            {
                <select class="form-control" id="itemTagConfigList_@(i)__Selectedgender" name="itemTagConfigList[@(i)].Selectedgender">
                    
                    @Html.Partial("_DropdownOptions", Model.itemTagConfigList[i].Genders)
                  
                </select>
            }


        
        </div>

        <div class="row">
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary" name="DeleteConf" id="deleteConf" style="display:inline;">Salva </button>
            </div>
        </div>

    }
</div>





