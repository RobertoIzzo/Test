@model WebApplication1.Models.HeaderTagViewModel

@{
    ViewBag.Title = "Edit";
}


<div class="row">

    @using (Html.BeginForm("Action", "Home", null, FormMethod.Post, new { id = "editTag" }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.ItemTagID)
                    @Html.EditorFor(model => model.ItemTagID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ItemTagID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            @for (var i = 0; i < Model.itemTagConfigList.Count; i++)
            {
                <div class="col-md-3">
                    <div class="form-group">
                        <div class="form-group">
                            @Html.LabelFor(model => model.itemTagConfigList[i].Genders)
                            @Html.DropDownListFor(model => model.itemTagConfigList[i].Selectedgender, Model.itemTagConfigList[i].Genders, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.itemTagConfigList[i].Genders, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


            }
        </div>

        <div class="row">
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary" name="DeleteConf" id="deleteConf" style="display:inline;">Salva </button>
            </div>
        </div>

    }
</div>





